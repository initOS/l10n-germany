<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hr_datev_employee_survey_tree_view">
            <field name="name">Datev Survey View</field>
            <field name="model">hr.datev.employee.survey</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="hr_datev_employee_survey_form_view">
            <field name="name">Datev Survey Form View</field>
            <field name="model">hr.datev.employee.survey</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="employee_id">Employee ID</field>
                        </group>
                        <!--Personal Information-->
                        <notebook>
                            <page string="Personal Data">
                                <group>
                                    <group>
                                        <field name="lastname">Lastname</field>
                                        <field name="birthname">Birthname</field>
                                        <field name="street">Street</field>
                                        <field name="street2">Street2</field>
                                        <field name="birthday">Birthday</field>
                                        <field name="insurance_number">Insurance Number</field>
                                        <field name="place_of_birth">Place Of Birth</field>
                                        <field name="country_of_birth">Country Of Birth</field>
                                        <field name="country_id">Country ID</field>
                                        <field name="bank_id">Bank ID</field>
                                    </group>
                                    <group>
                                        <field name="firstname">Firstname</field>
                                        <field name="zip">ZIP</field>
                                        <field name="city">City</field>
                                        <field name="gender">Gender</field>
                                        <field name="marital">Marital</field>
                                        <field name="handicapped">Handicapped</field>
                                        <field name="construction_employee_id">Construction Employee ID</field>
                                        <field name="bank_id">Bank ID</field>
                                    </group>
                                </group>
                            </page>
                            <page string="Employment">
                                <group>
                                    <field name="entry_date">Entry Date</field>
                                    <field name="first_entry_date">First Entry Date</field>
                                    <field name="job_title">Job Title</field>
                                    <field name="job_activity">Job Activity</field>
                                    <field name="employment">Employment</field>
                                    <field name="additional_employment">Additional Employment</field>
                                    <field name="highest_education">Highest Education</field>
                                    <field name="highest_vet_experience">Highest VET Experience</field>
                                    <field name="date_start_trainee">Trainee Start Date</field>
                                    <field name="date_end_trainee">Trainee End Date</field>
                                    <field name="construction_business_since">Construction Business Since</field>
                                    <field name="cost_centre">Cost Centre</field>
                                    <field name="production_site">Production Site</field>
                                    <field name="department_number">Department Number</field>
                                    <field name="job_activity_number">Job Activity Number</field>
                                    <field name="leave_count">Leave Count</field>
                                    <field name="working_hour_type">Working Hour Type</field>
                                    <field name="further_particulars">Further Particulars</field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_window_hr_datev_employee_survey">
            <field name="name">Datev Survey</field>
            <field name="res_model">hr.datev.employee.survey</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Datev Survey" id="menu_datev_survey" parent="hr.menu_hr_root"/>
        <menuitem name="Datev Survey Field Overview" id="menu_datev_survey_overview" parent="menu_datev_survey" action="action_window_hr_datev_employee_survey"/>
    </data>
</odoo>
